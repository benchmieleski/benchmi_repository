        <button class="close-btn" onclick="document.getElementById('modal').style.display='none'">Close</button>
    </div>

    <script>
        const themes = {
            misty: { colors: ['#6cccb6', '#57648a', '#ab5c95'], bg: '#fff', text: '#1a1a1a' }, 
            electric: { colors: ['#d9b3f2', '#b3d9d9', '#efb9da'], bg: '#fff', text: '#1a1a1a' },
            monochromeDark: { colors: ['#ccc', '#eee', '#fff'], bg: '#000', text: '#f0f0f0' },
            monochromeStatic: { colors: ['#000', '#000', '#000'], bg: '#fff', text: '#1a1a1a' }
        };

        let currentIdx = 0;
        const postIds = ['post-intro', 'post-floral', 'post-garden', 'post-riverside', 'post-reflection', 'post-sunset'];

        function setTheme(key, el) {
            const t = themes[key];
            const root = document.documentElement.style;
            root.setProperty('--theme-c1', t.colors[0]);
            root.setProperty('--theme-c2', t.colors[1]);
            root.setProperty('--theme-c3', t.colors[2]);
            root.setProperty('--bg-main', t.bg);
            root.setProperty('--text-base', t.text);
            root.setProperty('--painting-frame', key.includes('mono') ? '#d3d3d3' : t.colors[0]);

            document.querySelectorAll('.inv-grad-box').forEach(b => b.classList.toggle('no-grad', key === 'monochromeStatic'));
            document.querySelectorAll('.theme-option').forEach(o => o.classList.remove('active'));
            el.classList.add('active');
        }

        function scrollToPost(id) {
            const blog = document.getElementById('blog-area');
            const nav = document.getElementById('blog-nav');
            const closeX = document.getElementById('close-x');
            currentIdx = postIds.indexOf(id);

            blog.style.display = 'block';
            nav.style.display = 'flex';
            closeX.style.display = 'block';
            document.getElementById('gallery-container').classList.add('minimized');

            // Wait for display/opacity/layout shifts to settle before scrolling
            setTimeout(() => {
                blog.classList.add('active');
                const target = document.getElementById(id);
                // scrollIntoView is used here; 'start' alignment matches the snap-align
                target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 100);
        }

        function openBlogOnly() { scrollToPost('post-intro'); }
        function goHome() { closeBlog(); document.getElementById('modal').style.display = 'none'; }

        function navigatePost(dir) {
            currentIdx = (currentIdx + dir + postIds.length) % postIds.length;
            document.getElementById(postIds[currentIdx]).scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function closeBlog() {
            const blog = document.getElementById('blog-area');
            const closeX = document.getElementById('close-x');
            blog.classList.remove('active');
            closeX.style.display = 'none';
            document.getElementById('gallery-container').classList.remove('minimized');
            document.getElementById('blog-nav').style.display = 'none';
            setTimeout(() => { if(!blog.classList.contains('active')) blog.style.display = 'none'; }, 500);
        }

        function openModal(type) {
            const body = document.getElementById('modal-body');
            body.innerHTML = type === 'about' 
                ? `<h3>Benjamin Chmieleski</h3><p>Artist & Designer in West Michigan.<br>Landscape and botanical focus.</p>`
                : `<h3>Contact</h3><p>benchmieleski@gmail.com</p>`;
            document.getElementById('modal').style.display = 'block';
        }

        window.addEventListener('keydown', e => {
            if (e.key === 'Escape') goHome();
            if (document.getElementById('blog-area').classList.contains('active')) {
                if (e.key === 'ArrowRight' || e.key === 'ArrowDown') navigatePost(1);
                if (e.key === 'ArrowLeft' || e.key === 'ArrowUp') navigatePost(-1);
            }
        });
    </script>
</body>
</html>
